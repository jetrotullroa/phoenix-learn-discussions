<%= form_for @changeset, topic_path(@conn, :create), fn f -> %>
  <h3>New Topic</h3>

  <div class="form-group">
    <%= text_input f, :title, placeholder: "Title of the Topic", class: "form-control" %>
    <%= error_tag f, :title %>
  </div>


  <%= submit "Create Topic", class: "btn btn-primary" %>
<% end %>
